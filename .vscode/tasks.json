{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy to Device 0",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi@192.168.99.100",
                "/opt/field-trainer/scripts/github_deploy.sh"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "detail": "Deploy latest code from GitHub to Device 0"
        },
        {
            "label": "Deploy Specific Branch to Device 0",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi@192.168.99.100",
                "/opt/field-trainer/scripts/github_deploy.sh",
                "${input:branchName}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "detail": "Deploy specific branch to Device 0"
        },
        {
            "label": "Check Device 0 Status",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi@192.168.99.100",
                "sudo systemctl status field-trainer"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "View Device 0 Logs",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi@192.168.99.100",
                "sudo journalctl -u field-trainer -f"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": [],
            "detail": "Stream live logs from Device 0 (Ctrl+C to stop)"
        },
        {
            "label": "Restart Field Trainer Service",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi@192.168.99.100",
                "sudo systemctl restart field-trainer"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Local Development Server",
            "type": "shell",
            "command": "python3",
            "args": [
                "field_trainer_main.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": [],
            "detail": "Start Field Trainer locally for development"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "pytest",
                "tests/",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint Python Code",
            "type": "shell",
            "command": "flake8",
            "args": [
                ".",
                "--max-line-length=88",
                "--exclude=venv,env,.git,__pycache__"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$flake8"
            ]
        },
        {
            "label": "Format Python Code",
            "type": "shell",
            "command": "black",
            "args": [
                ".",
                "--line-length=88"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Backup Device 0",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi@192.168.99.100",
                "/opt/field-trainer/scripts/backup.sh"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Git: Push and Deploy",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Git Push",
                "Deploy to Device 0"
            ],
            "group": "build",
            "detail": "Push changes to GitHub and deploy to Device 0"
        },
        {
            "label": "Git Push",
            "type": "shell",
            "command": "git",
            "args": [
                "push"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Setup Virtual Environment",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "venv",
                "venv"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "./venv/bin/pip",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "dependsOn": "Setup Virtual Environment"
        },
        {
            "label": "Open Device 0 Web Interface",
            "type": "shell",
            "command": "code",
            "args": [
                "--open-url",
                "http://192.168.99.100:5000"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "branchName",
            "description": "Branch name to deploy",
            "default": "main",
            "type": "promptString"
        }
    ]
}