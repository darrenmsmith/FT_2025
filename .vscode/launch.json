{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Field Trainer - Full System",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/field_trainer_main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Field Trainer - Web Only",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/field_trainer_web.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}" 
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Field Trainer - Core Only",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/field_trainer_core.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Remote Device 0 Debug",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "192.168.7.129",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/opt/field-trainer"
                }
            ],
            "justMyCode": false
        },
        {
            "name": "Flask Development Server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "field_trainer_web.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--port=5000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ],
    "compounds": [
        {
            "name": "Field Trainer - Full Debug",
            "configurations": [
                "Field Trainer - Core Only",
                "Field Trainer - Web Only"
            ],
            "stopAll": true
        }
    ]
}